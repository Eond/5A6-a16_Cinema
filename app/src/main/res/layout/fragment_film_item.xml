<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_bar_height_fix"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFilm"
        android:layout_width="@dimen/film_small_img_size"
        android:layout_height="@dimen/film_small_img_size"
        android:maxHeight="@dimen/film_small_img_size"
        android:maxWidth="@dimen/film_small_img_size"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:adjustViewBounds="false"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/lblTitreFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
